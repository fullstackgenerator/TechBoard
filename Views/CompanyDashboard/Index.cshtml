@model TechBoard.ViewModels.Company.Dashboard.CompanyDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="dashboard-grid">
        <!-- Company Profile -->
        <a asp-controller="CompanyProfile" asp-action="Details" class="dashboard-card">
            <div class="card-body">
                <div class="card-content">
                    <div class="text-uppercase">
                        <i class="fas fa-building"></i>
                        Company Profile
                    </div>
                    <i class="fas fa-chevron-right fa-2x"></i>
                </div>
            </div>
        </a>

        <!-- Job Posts -->
        <a asp-controller="JobPosts" asp-action="Index" class="dashboard-card">
            <div class="card-body">
                <div class="card-content">
                    <div class="text-uppercase">
                        <i class="fas fa-briefcase"></i>
                        Job Posts
                    </div>
                    <i class="fas fa-chevron-right fa-2x"></i>
                </div>
            </div>
        </a>

        <!-- Analytics -->
        <a asp-controller="CompanyAnalytics" asp-action="Index" class="dashboard-card">
            <div class="card-body">
                <div class="card-content">
                    <div class="text-uppercase">
                        <i class="fas fa-chart-bar"></i>
                        Analytics
                    </div>
                    <i class="fas fa-chevron-right fa-2x"></i>
                </div>
            </div>
        </a>

        <!-- Membership -->
        <a asp-controller="CompanyMembership" asp-action="Details" class="dashboard-card">
            <div class="card-body">
                <div class="card-content">
                    <div class="text-uppercase">
                        <i class="fas fa-dollar-sign"></i>
                        Membership
                    </div>
                    <i class="fas fa-chevron-right fa-2x"></i>
                </div>
            </div>
        </a>
    </div>
</div>