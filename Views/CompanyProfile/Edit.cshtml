@model TechBoard.ViewModels.Company.Profile.EditCompanyProfileViewModel

@{
    ViewData["Title"] = "Company Profile Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="profile-details-card">
        <div class="profile-details-header">
            <h1 class="page-title">Edit Company Details</h1>
        </div>

        <div class="profile-details-body">
            <form asp-action="Edit" asp-controller="CompanyProfile" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All"></div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-building"></i> Company Name
                        </label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="validation-message"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IdNumber" class="form-label">
                            <i class="fas fa-id-card"></i> ID Number
                        </label>
                        <input asp-for="IdNumber" class="form-control"/>
                        <span asp-validation-for="IdNumber" class="validation-message"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-map-marker-alt"></i> Address
                        </label>
                        <input asp-for="Address" class="form-control"/>
                        <span asp-validation-for="Address" class="validation-message"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PostalCode" class="form-label">
                            <i class="fas fa-mail-bulk"></i> Postal Code
                        </label>
                        <input asp-for="PostalCode" class="form-control"/>
                        <span asp-validation-for="PostalCode" class="validation-message"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label">
                            <i class="fas fa-city"></i> City
                        </label>
                        <input asp-for="City" class="form-control"/>
                        <span asp-validation-for="City" class="validation-message"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label">
                            <i class="fas fa-globe"></i> Country
                        </label>
                        <input asp-for="Country" class="form-control"/>
                        <span asp-validation-for="Country" class="validation-message"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label">
                            <i class="fas fa-phone"></i> Phone
                        </label>
                        <input asp-for="Phone" class="form-control"/>
                        <span asp-validation-for="Phone" class="validation-message"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="validation-message"></span>
                    </div>
                </div>

                <div class="profile-details-actions d-flex flex-column flex-md-row justify-content-end">
                    <button type="submit" class="btn btn-modern-primary mb-2 mb-md-0 me-md-2">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="@Url.Action("Index", "CompanyDashboard")" class="btn btn-modern-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}