@model TechBoard.ViewModels.Company.Profile.CompanyProfileViewModel

@{
    ViewData["Title"] = "Company Profile Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="profile-details-card">
        <div class="profile-details-header">
            <h1 class="page-title">Company Profile Details</h1>
            <a asp-controller="CompanyProfile" asp-action="Edit" class="btn btn-modern-primary">
                <i class="fas fa-edit"></i> Edit Profile
            </a>
        </div>
        <div class="profile-details-body">
            <div class="profile-section">
                <h4 class="section-title">
                    <i class="fas fa-info-circle"></i> Your Company Information
                </h4>
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">Name:</span>
                        <span class="detail-value">@Model.Name</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">ID Number:</span>
                        <span class="detail-value">@Model.IdNumber</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email:</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Phone:</span>
                        <span class="detail-value">@Model.Phone</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Address:</span>
                        <span class="detail-value">@Model.Address</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">City:</span>
                        <span class="detail-value">@Model.City</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Postal Code:</span>
                        <span class="detail-value">@Model.PostalCode</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Country:</span>
                        <span class="detail-value">@Model.Country</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <div class="detail-item">
                            <span class="detail-label">Website:</span>
                            <span class="detail-value">
                                <a href="@Model.Website" target="_blank" class="profile-link">
                                    @Model.Website <i class="fas fa-external-link-alt"></i>
                                </a>
                            </span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="detail-item col-12">
                            <span class="detail-label">Description:</span>
                            <span class="section-content">@Model.Description</span>
                        </div>
                    }
                    @if (Model.EmployeeCount.HasValue)
                    {
                        <div class="detail-item">
                            <span class="detail-label">Employees:</span>
                            <span class="detail-value">@Model.EmployeeCount.Value</span>
                        </div>
                    }
                </div>
            </div>

            <div class="profile-details-actions">
                <a asp-controller="CompanyProfile" asp-action="ChangePassword" class="btn btn-modern-secondary">
                    <i class="fas fa-key"></i> Change Password
                </a>
                <a href="@Url.Action("Index", "CompanyDashboard")" class="btn btn-modern-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}