@model TechBoard.ViewModels.User.Profile.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile Details";
    Layout = "_Layout";
}

<div class="container">
    <div class="profile-details-card">
        <div class="profile-details-header">
            <h1 class="page-title">User Profile Details</h1>
            <div class="profile-actions">
                <a asp-controller="UserProfile" asp-action="Edit" class="btn btn-modern-primary">
                    <i class="fas fa-user-edit"></i>
                    Edit Profile
                </a>
                <a asp-controller="UserProfile" asp-action="ChangePassword" class="btn btn-modern-secondary">
                    <i class="fas fa-key"></i>
                    Change Password
                </a>
            </div>
        </div>

        <div class="profile-details-body">
            <div class="profile-section">
                <h3 class="section-title">
                    <i class="fas fa-user-circle"></i>
                    Personal Information
                </h3>
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">First Name:</span>
                        <span class="detail-value">@Model.FirstName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Last Name:</span>
                        <span class="detail-value">@Model.LastName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email:</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Phone:</span>
                        <span class="detail-value">@Model.Phone</span>
                    </div>
                </div>
            </div>

            <div class="profile-section">
                <h3 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Address Information
                </h3>
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">Address:</span>
                        <span class="detail-value">@Model.Address</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">City:</span>
                        <span class="detail-value">@Model.City</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Postal Code:</span>
                        <span class="detail-value">@Model.PostalCode</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Country:</span>
                        <span class="detail-value">@Model.Country</span>
                    </div>
                </div>
            </div>

            <div class="profile-section">
                <h3 class="section-title">
                    <i class="fas fa-globe"></i>
                    Online Profiles
                </h3>
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">GitHub:</span>
                        <span class="detail-value">
                            @if (!string.IsNullOrEmpty(Model.GitHubProfile))
                            {
                                <a href="@Model.GitHubProfile" target="_blank" class="profile-link">
                                    <i class="fab fa-github"></i> View Profile
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">LinkedIn:</span>
                        <span class="detail-value">
                            @if (!string.IsNullOrEmpty(Model.LinkedInProfile))
                            {
                                <a href="@Model.LinkedInProfile" target="_blank" class="profile-link">
                                    <i class="fab fa-linkedin"></i> View Profile
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Website:</span>
                        <span class="detail-value">
                            @if (!string.IsNullOrEmpty(Model.Website))
                            {
                                <a href="@Model.Website" target="_blank" class="profile-link">
                                    <i class="fas fa-external-link-alt"></i> Visit Website
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <div class="profile-details-actions">
                <a href="@Url.Action("Index", "UserDashboard")" class="btn btn-modern-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}