@model TechBoard.ViewModels.JobApplication.SubmitJobApplicationViewModel

@{
    ViewData["Title"] = $"Apply for {ViewData["JobTitle"]}";
    Layout = "_Layout";
}

<div class="container">
    <div class="job-details-card">
        <div class="job-details-header">
            <h2 class="section-title">Apply for "@ViewData["JobTitle"]"</h2>
        </div>
        
        <div class="job-details-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            @if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    @TempData["WarningMessage"]
                </div>
            }

            <form asp-action="Apply" asp-controller="UserJobApplication" asp-route-jobPostId="@ViewData["JobPostId"]" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <h3 class="section-title">
                    <i class="fas fa-user"></i>
                    Your Profile Information
                </h3>
                
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">Name:</span>
                        <span class="detail-value">@ViewData["UserName"]</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email:</span>
                        <span class="detail-value">@ViewData["UserEmail"]</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Phone:</span>
                        <span class="detail-value">@ViewData["UserPhone"]</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Address:</span>
                        <span class="detail-value">@ViewData["UserAddress"]</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">LinkedIn:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(ViewData["UserLinkedIn"]?.ToString()) ? "N/A" : ViewData["UserLinkedIn"])</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">GitHub:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(ViewData["UserGitHub"]?.ToString()) ? "N/A" : ViewData["UserGitHub"])</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Website:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(ViewData["UserPortfolio"]?.ToString()) ? "N/A" : ViewData["UserPortfolio"])</span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="Notes" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverLetter" class="form-label"></label>
                    <input asp-for="CoverLetter" type="file" class="form-control"/>
                    <span asp-validation-for="CoverLetter" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ResumeFile" class="form-label"></label>
                    <input asp-for="ResumeFile" type="file" class="form-control"/>
                    <span asp-validation-for="ResumeFile" class="validation-message"></span>
                </div>

                <div class="job-details-actions">
                    <button type="submit" class="btn btn-modern-primary">
                        <i class="fas fa-paper-plane"></i>
                        Submit Application
                    </button>
                    <a asp-controller="PublicJobPost" asp-action="Details" asp-route-id="@ViewData["JobPostId"]" class="btn btn-modern-secondary">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}