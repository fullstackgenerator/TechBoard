@model IEnumerable<TechBoard.ViewModels.User.Profile.JobApplicationViewModel>

@{
    ViewData["Title"] = "My Job Applications";
    Layout = "_Layout";
}

<div class="container">
    <h1 class="page-title text-center mb-4">My Job Applications</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info" role="alert">
            @TempData["InfoMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.Any())
    {
        <div class="job-details-card">
            <div class="job-details-header">
                <h2 class="section-title">All Submitted Applications</h2>
            </div>
            <div class="job-details-body">
                <div class="table-responsive">
                    <table class="applications-table table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Job Title</th>
                                <th scope="col">Company Name</th>
                                <th scope="col">Applied Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var application in Model)
                            {
                                <tr>
                                    <td>@application.JobTitle</td>
                                    <td>@application.CompanyName</td>
                                    <td>@application.AppliedDate.ToString("dd. MM. yyyy HH:mm")</td>
                                    <td>
                                        <span class="status-badge status-@application.Status.ToLower()">
                                            @application.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@application.Id" class="btn-view-details">
                                            View Details
                                            <i class="fas fa-arrow-right"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="no-results text-center py-5">
            <div class="no-results-icon mb-3">
                <i class="fas fa-briefcase fa-3x"></i>
            </div>
            <h4>No applications submitted yet</h4>
            <p>You haven't submitted any job applications yet. <a asp-controller="PublicJobPost" asp-action="Index">Browse jobs</a> to get started.</p>
        </div>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}