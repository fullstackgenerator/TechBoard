@model TechBoard.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container">
    <div class="password-change-card">
        <div class="password-change-header">
            <h1 class="page-title">
                <i class="fas fa-user-plus"></i>
                Create Your Account
            </h1>
        </div>
        <div class="password-change-body">
            <div class="d-flex justify-content-center align-items-center mb-4">
                <span class="me-3 h5">User</span>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="registrationTypeToggle" style="width: 3em; height: 1.5em;">
                </div>
                <span class="ms-3 h5">Company</span>
            </div>

            <form asp-controller="Auth" asp-action="Register" method="post" id="companyRegistrationForm" class="d-none">
                <div asp-validation-summary="All"></div>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IsCompanyRegistration" value="true" />

                <div class="form-grid">
                    <div class="row">
                        <div class="form-group col-md-6 mb-3"> @* Added mb-3 for spacing *@
                            <label asp-for="Company.Name" class="form-label">
                                <i class="fas fa-building"></i>
                                Company Name
                            </label>
                            <input asp-for="Company.Name" class="form-control" placeholder="Company Name"/>
                            <span asp-validation-for="Company.Name" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.IdNumber" class="form-label">
                                <i class="fas fa-id-card"></i>
                                Company ID
                            </label>
                            <input asp-for="Company.IdNumber" class="form-control" placeholder="Company ID Number"/>
                            <span asp-validation-for="Company.IdNumber" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.Address" class="form-label">
                                <i class="fas fa-map-marker-alt"></i>
                                Address
                            </label>
                            <input asp-for="Company.Address" class="form-control" placeholder="Address"/>
                            <span asp-validation-for="Company.Address" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.PostalCode" class="form-label">
                                <i class="fas fa-mail-bulk"></i>
                                Postal Code
                            </label>
                            <input asp-for="Company.PostalCode" class="form-control" placeholder="Postal Code"/>
                            <span asp-validation-for="Company.PostalCode" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.City" class="form-label">
                                <i class="fas fa-city"></i>
                                City
                            </label>
                            <input asp-for="Company.City" class="form-control" placeholder="City"/>
                            <span asp-validation-for="Company.City" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.Phone" class="form-label">
                                <i class="fas fa-phone"></i>
                                Phone
                            </label>
                            <input asp-for="Company.Phone" class="form-control" placeholder="Phone Number"/>
                            <span asp-validation-for="Company.Phone" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.Country" class="form-label">
                                <i class="fas fa-globe"></i>
                                Country
                            </label>
                            <input asp-for="Company.Country" class="form-control" placeholder="Country"/>
                            <span asp-validation-for="Company.Country" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.Email" class="form-label">
                                <i class="fas fa-envelope"></i>
                                Email
                            </label>
                            <input asp-for="Company.Email" class="form-control" type="email" placeholder="Email Address" autocomplete="username"/>
                            <span asp-validation-for="Company.Email" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.Password" class="form-label">
                                <i class="fas fa-lock"></i>
                                Password
                            </label>
                            <input asp-for="Company.Password" class="form-control" type="password" placeholder="Create Password" autocomplete="new-password"/>
                            <span asp-validation-for="Company.Password" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Company.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                Confirm Password
                            </label>
                            <input asp-for="Company.ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" autocomplete="new-password"/>
                            <span asp-validation-for="Company.ConfirmPassword" class="validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="password-change-actions d-grid gap-2 d-md-block mt-4"> @* Added Bootstrap classes here *@
                    <button type="submit" class="btn-modern-primary">
                        <i class="fas fa-user-plus"></i>
                        Register
                    </button>
                    <a asp-controller="Auth" asp-action="Login" class="btn-modern-secondary mt-2 mt-md-0 ms-md-2"> @* Added Bootstrap classes here *@
                        <i class="fas fa-sign-in-alt"></i>
                        Login
                    </a>
                </div>
            </form>

            <form asp-controller="Auth" asp-action="Register" method="post" id="userRegistrationForm">
                <div asp-validation-summary="All"></div>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IsCompanyRegistration" value="false" />

                <div class="form-grid">
                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.FirstName" class="form-label">
                                <i class="fas fa-user"></i>
                                First Name
                            </label>
                            <input asp-for="User.FirstName" class="form-control" placeholder="First Name"/>
                            <span asp-validation-for="User.FirstName" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.LastName" class="form-label">
                                <i class="fas fa-user"></i>
                                Last Name
                            </label>
                            <input asp-for="User.LastName" class="form-control" placeholder="Last Name"/>
                            <span asp-validation-for="User.LastName" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.Address" class="form-label">
                                <i class="fas fa-map-marker-alt"></i>
                                Address
                            </label>
                            <input asp-for="User.Address" class="form-control" placeholder="Address"/>
                            <span asp-validation-for="User.Address" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.PostalCode" class="form-label">
                                <i class="fas fa-mail-bulk"></i>
                                Postal Code
                            </label>
                            <input asp-for="User.PostalCode" class="form-control" placeholder="Postal Code"/>
                            <span asp-validation-for="User.PostalCode" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.City" class="form-label">
                                <i class="fas fa-city"></i>
                                City
                            </label>
                            <input asp-for="User.City" class="form-control" placeholder="City"/>
                            <span asp-validation-for="User.City" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.Phone" class="form-label">
                                <i class="fas fa-phone"></i>
                                Phone
                            </label>
                            <input asp-for="User.Phone" class="form-control" placeholder="Phone Number"/>
                            <span asp-validation-for="User.Phone" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.Country" class="form-label">
                                <i class="fas fa-globe"></i>
                                Country
                            </label>
                            <input asp-for="User.Country" class="form-control" placeholder="Country"/>
                            <span asp-validation-for="User.Country" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.Email" class="form-label">
                                <i class="fas fa-envelope"></i>
                                Email
                            </label>
                            <input asp-for="User.Email" class="form-control" type="email" placeholder="Email Address" autocomplete="username"/>
                            <span asp-validation-for="User.Email" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.Password" class="form-label">
                                <i class="fas fa-lock"></i>
                                Password
                            </label>
                            <input asp-for="User.Password" class="form-control" type="password" placeholder="Create Password" autocomplete="new-password"/>
                            <span asp-validation-for="User.Password" class="validation-message"></span>
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="User.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                Confirm Password
                            </label>
                            <input asp-for="User.ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" autocomplete="new-password"/>
                            <span asp-validation-for="User.ConfirmPassword" class="validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="password-change-actions d-grid gap-2 d-md-block mt-4">
                    <button type="submit" class="btn-modern-primary">
                        <i class="fas fa-user-plus"></i>
                        Register
                    </button>
                    <a asp-controller="Auth" asp-action="Login" class="btn-modern-secondary mt-2 mt-md-0 ms-md-2">
                        <i class="fas fa-sign-in-alt"></i>
                        Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}