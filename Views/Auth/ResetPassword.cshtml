@model TechBoard.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="container">
    <div class="password-change-card">
        <div class="password-change-header">
            <h1 class="page-title">
                <i class="fas fa-key"></i>
                Reset your password
            </h1>
        </div>
        <div class="password-change-body">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <form method="post" asp-controller="Auth" asp-action="ResetPassword">
                        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                        <input asp-for="Email" type="hidden" />
                        <input asp-for="Code" type="hidden" />

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i>
                                New Password
                            </label>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New Password" />
                            <span asp-validation-for="Password" class="validation-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                Confirm New Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm New Password" />
                            <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn-modern-primary">
                                <i class="fas fa-redo"></i>
                                Reset Password
                            </button>
                        </div>

                        <p class="mt-3 text-center">
                            <a asp-controller="Auth" asp-action="Login" class="auth-link">
                                <i class="fas fa-arrow-left"></i>
                                Back to Login
                            </a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}