@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "_Layout";
}

<div class="container">
    <div class="password-change-card">
        <div class="password-change-header">
            <h1 class="page-title">
                <i class="fas fa-envelope-open-text"></i>
                Check your email
            </h1>
        </div>
        <div class="password-change-body">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="no-results" style="background-color: rgba(63, 131, 248, 0.05); border-radius: var(--border-radius-medium);">
                        <div class="no-results-icon" style="color: var(--primary-color);">
                            <i class="fas fa-check-circle fa-3x"></i>
                        </div>
                        <h4>Password reset link sent!</h4>
                        <p class="section-content">
                            If an account with that email address exists, we've sent you an email with a link to reset your password.
                            Please check your email and follow the instructions.
                        </p>
                        <p class="section-content">
                            <strong>For portfolio demo:</strong> Check the application logs to see the reset link, as emails are being logged instead of sent.
                        </p>
                    </div>

                    <div class="password-change-actions mt-4 text-center">
                        <a asp-controller="Auth" asp-action="Login" class="btn-modern-primary">
                            <i class="fas fa-arrow-left"></i>
                            Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>