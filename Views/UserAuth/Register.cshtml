@model TechBoard.ViewModels.User.Account.UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<form asp-controller="UserAuth" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]"
      method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.AntiForgeryToken()
    <div class="d-flex justify-content-center mt-3">
        <div class="card w-50">
            <div class="container pt-3">
                <div class="mx-auto">
                    <div class="row">
                        <div class="col-md-6">

                            <div class="mb-3">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <input asp-for="Address" class="form-control" placeholder="Address"/>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <input asp-for="PostalCode" class="form-control" placeholder="Post number"/>
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                        <div class="mb-3">
                            <input asp-for="City" class="form-control" placeholder="City"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                           
                            <input asp-for="Phone" class="form-control" placeholder="Phone number"/>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col-md-6">
                        <div class="mb-3">
                            <input asp-for="Country" class="form-control" placeholder="Country"/>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Email" class="form-control" type="email" placeholder="E-mail address"
                                   autocomplete="username"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col-md-6">
                        <div class="mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Create password"
                                   autocomplete="current-password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col-md-6">
                        <div class="mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" type="password"
                                   placeholder="Confirm password"
                                   autocomplete="current-password"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <p class="text-center mt-3">
                        Have an account? <a asp-controller="UserAuth" asp-action="Login">Log in</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>

