@model TechBoard.ViewModels.User.Dashboard.UserDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutUser";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
