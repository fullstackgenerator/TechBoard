@model TechBoard.ViewModels.Admin.Profile.EditAdminProfileViewModel

@{
    ViewData["Title"] = "Edit Admin Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="profile-details-card">
        <div class="profile-details-header">
            <h1 class="page-title">Edit Admin Details</h1>
        </div>

        <div class="profile-details-body">
            <form asp-action="Edit" asp-controller="AdminProfile" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All"></div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label">
                            <i class="fas fa-user"></i> Full Name
                        </label>
                        <input asp-for="FullName" class="form-control"/>
                        <span asp-validation-for="FullName" class="validation-message"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="validation-message"></span>
                    </div>
                </div>

                <div class="profile-details-actions d-flex flex-column flex-md-row justify-content-end">
                    <button type="submit" class="btn btn-modern-primary mb-2 mb-md-0 me-md-2">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-modern-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}