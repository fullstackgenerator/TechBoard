@model TechBoard.ViewModels.Admin.Profile.AdminProfileViewModel

@{
    ViewData["Title"] = "Admin Profile Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="profile-details-card">
        <div class="profile-details-header">
            <h1 class="page-title">Admin Profile Details</h1>
        </div>

        <div class="profile-details-body">
            <div class="profile-section">
                <h4 class="section-title">
                    <i class="fas fa-info-circle"></i> Your Information
                </h4>
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">Name:</span>
                        <span class="detail-value">@Model.FullName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email:</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                </div>
            </div>

            <div class="profile-details-actions d-flex flex-column flex-md-row justify-content-end mt-4">
                <a asp-controller="AdminProfile" asp-action="Edit" class="btn btn-modern-primary mb-2 mb-md-0 me-md-2">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
                <a asp-controller="AdminProfile" asp-action="ChangePassword"
                   class="btn btn-modern-secondary mb-2 mb-md-0 me-md-2">
                    <i class="fas fa-key"></i> Change Password
                </a>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-modern-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>