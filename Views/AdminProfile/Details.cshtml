@model TechBoard.ViewModels.Admin.Profile.AdminProfileViewModel

@{
    ViewData["Title"] = "Admin Profile Details";
    Layout = "_Layout";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Admin Profile Details</h1>
</div>

<div class="row">
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-3">
                            Your Information
                        </div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Name: @Model.FullName</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Email: @Model.Email</div>
                       

                        <div class="mt-4">
                            <a asp-controller="AdminProfile" asp-action="Edit" class="btn btn-primary">Edit
                                Profile</a>
                            <a asp-controller="AdminProfile" asp-action="ChangePassword"
                               class="btn btn-secondary ml-2">Change Password</a>
                            <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-secondary">Back</a>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>