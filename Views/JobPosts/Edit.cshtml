@using TechBoard.Models.Domain
@model TechBoard.ViewModels.JobPost.EditJobPostViewModel

@{
    ViewData["Title"] = "Edit Job Post";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Job Post</h6>
            </div>

            <div class="card-body">
                <form asp-action="Edit" asp-controller="JobPosts" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control"/>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Requirements" class="form-label"></label>
                            <textarea asp-for="Requirements" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Requirements" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mt-4">
                                <input asp-for="IsRemote" class="form-check-input" type="checkbox"/>
                                <label asp-for="IsRemote" class="form-check-label"></label>
                            </div>
                            <span asp-validation-for="IsRemote" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="SalaryMin" class="form-label"></label>
                            <input asp-for="SalaryMin" type="number" step="0.01" class="form-control"/>
                            <span asp-validation-for="SalaryMin" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="SalaryMax" class="form-label"></label>
                            <input asp-for="SalaryMax" type="number" step="0.01" class="form-control"/>
                            <span asp-validation-for="SalaryMax" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label asp-for="JobLevel" class="form-label"></label>
                            <select asp-for="JobLevel" asp-items="Html.GetEnumSelectList<JobLevel>()" class="form-control">
                                <option value="">-- Select Job Level --</option>
                            </select>
                            <span asp-validation-for="JobLevel" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="WorkType" class="form-label"></label>
                            <select asp-for="WorkType" asp-items="Html.GetEnumSelectList<WorkType>()" class="form-control">
                                <option value="">-- Select Work Type --</option>
                            </select>
                            <span asp-validation-for="WorkType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Benefits" class="form-label"></label>
                            <textarea asp-for="Benefits" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Benefits" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PostedDate" class="form-label"></label>
                            <input asp-for="PostedDate" class="form-control" readonly/>
                            <span asp-validation-for="PostedDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">Save Changes</button>
                        <a asp-action="Index" asp-controller="JobPosts" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}