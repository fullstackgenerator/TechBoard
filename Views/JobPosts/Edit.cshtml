@model TechBoard.ViewModels.JobPost.EditJobPostViewModel

@{
    ViewData["Title"] = "Edit Job Post";
    Layout = "_LayoutCompany";
    bool canPostFeatured = (bool)ViewBag.CanPostFeatured;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Job Post</h6>
            </div>

            <div class="card-body">
                <form asp-action="Edit" asp-controller="JobPosts" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Benefits" class="form-label"></label>
                            <textarea asp-for="Benefits" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Benefits" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PostedDate" class="form-label"></label>
                            <input asp-for="PostedDate" class="form-control" readonly/>
                            <span asp-validation-for="PostedDate" class="text-danger"></span>
                        </div>
                    </div>
                    
                    @if (canPostFeatured)
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsFeatured" class="form-check-label"></label>
                                    <small class="form-text text-muted">Check this box to promote your job post. This option is available with your current membership tier.</small>
                                </div>
                                <span asp-validation-for="IsFeatured" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="alert alert-info mt-3" role="alert">
                                    Your current membership tier does not allow featured job posts. Upgrade your membership to enable this option. This job post is currently @(Model.IsFeatured ? "Featured" : "Not Featured") and cannot be changed.
                                </div>
                                <input type="hidden" asp-for="IsFeatured" />
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">Save Changes</button>
                        <a asp-action="Index" asp-controller="JobPosts" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}