@model TechBoard.ViewModels.JobPost.JobPostViewModel

@{
    ViewData["Title"] = "View Job Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="job-details-card">
        <div class="job-details-header">
            <h1 class="page-title">View Job Details</h1>
            <div class="job-details-actions">
                <a asp-controller="JobPosts" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-modern-primary">
                    <i class="fas fa-edit"></i> Edit Job Post
                </a>
                <a asp-controller="CompanyJobApplication" asp-action="Applications" asp-route-jobPostId="@Model.Id"
                   class="btn btn-modern-primary">
                    <i class="fas fa-users"></i> View Applicants
                </a>
                <a href="@Url.Action("Index", "JobPosts")" class="btn btn-modern-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Job Posts
                </a>
            </div>
        </div>
        <div class="job-details-body">
            <div class="job-section">
                <h4 class="section-title">
                    <i class="fas fa-info-circle"></i> Role Information
                </h4>
                <div class="details-grid">
                    <div class="detail-item">
                        <span class="detail-label">Title:</span>
                        <span class="detail-value">@Model.Title</span>
                    </div>
                    <div class="detail-item col-12">
                        <span class="detail-label">Description:</span>
                        <span class="section-content">@Model.Description</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Location:</span>
                        <span class="detail-value">@Model.Location</span>
                    </div>
                    <div class="detail-item col-12">
                        <span class="detail-label">Requirements:</span>
                        <span class="section-content">@Model.Requirements</span>
                    </div>
                    <div class="detail-item col-12">
                        <span class="detail-label">Benefits:</span>
                        <span class="section-content">@Model.Benefits</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Min Salary:</span>
                        <span class="detail-value">@Model.SalaryMin €</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Max Salary:</span>
                        <span class="detail-value">@Model.SalaryMax €</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Category:</span>
                        <span class="detail-value">@Model.Category</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Job Level:</span>
                        <span class="detail-value">@Model.JobLevel</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Work Type:</span>
                        <span class="detail-value">@Model.WorkType</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Remote Work:</span>
                        <span class="detail-value">@(Model.IsRemote ? "Yes" : "No")</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Company Name:</span>
                        <span class="detail-value">@Model.CompanyName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Posted Date:</span>
                        <span class="detail-value">@Model.PostedDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Featured Post:</span>
                        <span class="detail-value">@(Model.IsFeatured ? "Yes" : "No")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>