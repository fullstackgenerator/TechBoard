@model TechBoard.ViewModels.JobPost.JobPostViewModel

@{
    ViewData["Title"] = "View Job Details";
    Layout = "_LayoutCompany";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">View Job Details</h1>
</div>

<div class="row">
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-3">
                            Role Information
                        </div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Title: @Model.Title</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Description: @Model.Description</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Location: @Model.Location</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Requirements: @Model.Requirements</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Benefits: @Model.Benefits</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Min Salary: @Model.SalaryMin €</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Max Salary: @Model.SalaryMax €</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Category: @Model.Category</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">JobLevel: @Model.JobLevel</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">WorkType: @Model.WorkType</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Remote work: @Model.IsRemote</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Company Name: @Model.CompanyName</div>
                        <div class="h5 mb-2 font-weight-bold text-gray-800">Posted Date: @Model.PostedDate</div>
                        <div class="mt-4">
                            
                            <div class="mt-4">
                            
                                <a asp-controller="JobPosts" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Job Post</a>
                                <a href="@Url.Action("Index", "JobPosts")" class="btn btn-secondary">Back</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>