@using TechBoard.ViewModels.JobPost
@model IEnumerable<JobPostViewModel>

@{
    ViewData["Title"] = "All Job Posts";
    Layout = "_LayoutCompany";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Your Job Posts</h1>
</div>

<div class="mb-4">
    <a asp-controller="JobPosts" asp-action="Create" class="text-decoration-none btn btn-sm btn-primary">
        <i class="fas fa-plus fa-sm text-white-50"></i> Create New Job Post
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var jobPost in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">@jobPost.Title</h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-1">
                            <i class="fas fa-building"></i> @jobPost.CompanyName
                            <span class="ml-3"><i class="fas fa-map-marker-alt"></i> @jobPost.Location</span>
                        </p>
                        <div class="card-text">Title: @jobPost.Title</div>
                        <div class="card-text">Category: @jobPost.Category</div>
                        <div class="card-text">Job Level: @jobPost.JobLevel</div>
                        <div class="card-text">Location: @jobPost.Location</div>
                        <div class="card-text">Posted on: @jobPost.PostedDate.ToString("dd. MM. yyyy")</div>
                        <hr/>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-controller="JobPosts" asp-route-id="@jobPost.Id" class="btn btn-primary btn-sm">View Details</a>
                            <form asp-action="Delete" asp-controller="JobPosts" asp-route-id="@jobPost.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this job post? This action cannot be undone.');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        You haven't created any job posts yet.
    </div>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}